<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.AddActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <ImageView
            android:id="@+id/ic_back"
            style="@style/customBarImg"
            android:src="@mipmap/ic_back" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ic_clock"
            style="@style/customBarImg"
            android:src="@mipmap/ic_clock" />

        <ImageView
            android:id="@+id/ic_done"
            style="@style/customBarImg"
            android:layout_marginStart="20dp"
            android:src="@mipmap/ic_done" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white_3"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <EditText
        android:id="@+id/et_short"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:ellipsize="end"
        android:hint="标题"
        android:maxLines="2"
        android:paddingStart="10dp"
        android:paddingTop="15dp"
        android:paddingEnd="10dp"
        android:paddingBottom="15dp"
        android:textColor="@color/black_10"
        android:textSize="22sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white_3" />


    <!--文本编辑区-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:focusable="true"
            android:gravity="start"
            android:hint="内容"
            android:padding="10dp" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_bold"
            style="@style/bottomItem"
            android:src="@mipmap/ic_font_bold" />

        <ImageView
            android:id="@+id/ic_italic"
            style="@style/bottomItem"
            android:src="@mipmap/ic_font_italic" />

        <ImageView
            android:id="@+id/ic_underline"
            style="@style/bottomItem"
            android:src="@mipmap/ic_font_underline" />

        <ImageView
            android:id="@+id/ic_strickout"
            style="@style/bottomItem"
            android:src="@mipmap/ic_font_strickout" />
    </LinearLayout>


</LinearLayout>